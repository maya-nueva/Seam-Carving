from skimage import io
from skimage import filters
import numpy as np
import matplotlib.pyplot as plt
import cv2


def load(image_path):
    """Loads an image from a file path, returning a numpy array of shape(image_height, image_width, 3).
    """
    out = io.imread(image_path)

    # Convert the image to be in the range (0, 1)
    out = out.astype(np.float64) / 255
    return out

image1_path = "./images/field.jpg"
img1 = cv2.imread(image1_path)


def display(img):
    # Show image
    plt.figure(figsize = (5,5))
    plt.imshow(img)
    plt.axis('off')
    plt.show()

# display(img1)

from skimage import color
# from skimage.color import label2rgb

def convert_to_grayscale(img):
    '''img is an RGB image, represented as a 2D numpy array.'''
    # YOUR CODE GOES HERE
    # out = img
    out = cv2.cvtColor(img,cv2.COLOR_BGR2GRAY)
    return out

imgG = convert_to_grayscale(img1)
plt.imshow(imgG,cmap='gray')
# display(grey_image)
# imgG = cv2.cvtColor(img, COLOR_BGR2GRAY)
#sobel = edge detection (we can include canny edge) 
# filtered = filters.sobel(RGB2GRAY.astype("float"))
filtered = cv2.Canny(imgG,20,40)
filtered1 = cv2.Canny(img1,200,200)
filtered2 = cv2.Canny(imgG,60,20)
filtered3 = filters.sobel(filtered)
# cv2.imshow("penguin", imgG)
display(imgG)
plt.imshow(filtered,cmap='gray')
display(filtered)
plt.imshow(filtered1,cmap='gray')
display(filtered1)
plt.imshow(filtered2,cmap='gray')
display(filtered2)

plt.imshow(filtered3,cmap='gray')
display(filtered3)
